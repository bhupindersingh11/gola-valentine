<h1>Gola ðŸ’–<br><br>Will you be my Valentine?</h1>
<button id="yesBtn">YES ðŸ’˜</button>
<button id="noBtn">NO ðŸ’”</button>
</div>

<script>
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const card = document.getElementById("card");

// Function to move the No button randomly
function moveNo() {
  const x = Math.random() * (window.innerWidth - 100);
  const y = Math.random() * (window.innerHeight - 50);
  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";
}

// Move No constantly
setInterval(moveNo, 50);

// Hearts floating
function spawnHearts() {
  setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "ðŸ’–";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.bottom = "0px";
    heart.style.fontSize = 20 + Math.random()*20 + "px";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(), 3000);
  }, 150);
}

// Fireworks
function spawnFireworks() {
  setInterval(() => {
    const fw = document.createElement("div");
    fw.className = "firework";
    fw.style.background = `hsl(${Math.random()*360},100%,60%)`;
    fw.style.left = Math.random()*100 + "vw";
    fw.style.top = Math.random()*100 + "vh";
    document.body.appendChild(fw);
    setTimeout(()=>fw.remove(),1000);
  }, 400);
}

// YES clicked
yesBtn.addEventListener("click", () => {
  card.remove();
  spawnHearts();
  spawnFireworks();

  const msgDiv = document.createElement("div");
  msgDiv.id = "loveMessage";
  document.body.appendChild(msgDiv);

  const msg = "Gola ðŸ’– You just made me the happiest person alive. I promise endless love, hugs, and chocolate forever. ðŸ’˜ â€” From Bhupinder ðŸ’Œ";
  let i = 0;
  function typeMsg() {
    if(i < msg.length){
      msgDiv.innerHTML += msg.charAt(i);
      i++;
      setTimeout(typeMsg, 40);
    }
  }
  typeMsg();
});
</script>
